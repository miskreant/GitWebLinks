<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <Thickness x:Key="OptionsControlPadding">0,10</Thickness>
    <Thickness x:Key="SmallSpacerBottom">0,0,0,2</Thickness>
    <Thickness x:Key="SmallSpacerRight">0,0,2,0</Thickness>
    <Thickness x:Key="MediumSpacerBottom">0,0,0,5</Thickness>
    <Thickness x:Key="MediumSpacerRight">0,0,5,0</Thickness>
    <Thickness x:Key="LargeSpacerBottom">0,0,0,10</Thickness>
    <Thickness x:Key="LargeSpacerRight">0,0,10,0</Thickness>

    <Style x:Key="OptionsContainer" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Margin" Value="{StaticResource OptionsControlPadding}" />
    </Style>

    <Style x:Key="ServerDataGrid" TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="True"/>
        <Setter Property="CanUserDeleteRows" Value="True"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="False"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="False"/>
        <Setter Property="RowHeaderWidth" Value="32"/>
        <Setter Property="Height" Value="200"/>
    </Style>
</ResourceDictionary>
